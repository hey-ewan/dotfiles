// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "VSCode Icons (Dark)",
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "max_tabs": 6,
  "features": {
    "inline_completion_provider": "zed"
  },
  "cursor_shape": "underline",
  "cursor_blink": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 2000,
    "use_system_clipboard": "on_yank"
  },
  "ui_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 14.0,
  "theme": {
    "mode": "system",
    "light": "Kanagawa Lotus",
    "dark": "Gruvbox Material"
  },
  "vim_mode": true,
  "terminal": {
    "shell": {
      "program": "/usr/bin/fish"
    },
    "font_size": 14,
    "font_family": "SpaceMono Nerd Font Propo",
    "cursor_shape": "underline",
    "blinking": "on"
  },
  "project_panel": {
    "dock": "right",
    "entry_spacing": "standard"
    // "scrollbar": {
    // "show": "never"
    // }
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": true
  },
  "formatter": "auto",
  "languages": {
    "Markdown": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "TOML": {
      "formatter": "prettier",
      "format_on_save": "off"
    },
    "YAML": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "JSON": {
      "tab_size": 2,
      "preferred_line_length": 100,
      "formatter": "prettier"
    },
    "JSONC": {
      "tab_size": 2,
      "preferred_line_length": 100,
      "formatter": "prettier"
    },
    "JavaScript": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "CSS": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "Rust": {
      "tab_size": 2,
      "formatter": "auto"
    },
    "Markdown-Inline": {
      "tab_size": 2,
      "formatter": "prettier"
    }
  },
  "lsp": {
    "wakatime": {
      "settings": {
        "api-key": ""
      }
    }
  }
}
